<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/subscribed_grid_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />

    <TextView
        android:id="@+id/subscribed_grid_show_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primaryText"
        android:layout_alignLeft="@+id/subscribed_grid_image"
        android:layout_alignRight="@+id/subscribed_grid_image"
        android:layout_below="@+id/subscribed_grid_image"
        />

</RelativeLayout>